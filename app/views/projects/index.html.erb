<h3><%= t('list.show_all') %></h3>

<%= render "shared/editableListToolbar" %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th class="col-sm-1"></th>
      <th class="col-sm-1">Bezeichnung</th>
      <th class="col-sm-1">Beschreibung</th>
      <th class="col-sm-1">FÃ¤lligkeitsdatum</th>
      <th class="col-sm-5">Kunde</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to ('<span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>').html_safe, project %>
          <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, edit_project_path(project) %>
          <%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>').html_safe, project,
                      method: :delete, data: { confirm: t('askForConfirmation') } %>
        </td>
        <td><%= project.DisplayName %></td>
        <td><%= project.Description %></td>
        <td><%= project.DueDate %></td>
        <td><%= project.customer.try(:DisplayName) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

