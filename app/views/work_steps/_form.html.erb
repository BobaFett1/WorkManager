<%= form_for(@work_step) do |f| %>
    <% if @work_step.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@work_step.errors.count, "error") %> prohibited this work_step from being saved:</h2>

          <ul>
            <% @work_step.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :DisplayName, 'Bezeichnung' %><br>
      <%= f.text_field :DisplayName, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :Description, 'Beschreibung' %><br>
      <%= f.text_field :Description, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :AllowQuantityInput, 'Mengeneingabe' %><br>
      <%= f.check_box :AllowQuantityInput, class: 'form-control' %>
    </div>

    <div class="btn-group btn-group-lg">
      <%= f.submit t('submit'), class: 'btn btn-default' %>
      <% if controller.action_name == 'edit' %>
          <%= link_to t('list.show_single'), @work_step, class: 'btn btn-default' %>
      <% end %>
      <%= link_to t('back'), work_steps_path, class: 'btn btn-default' %>
    </div>
<% end %>