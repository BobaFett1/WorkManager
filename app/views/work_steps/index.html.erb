<h3><%= t('list.show_all') %></h3>

<%= render "shared/editableListToolbar" %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th class="col-sm-1"></th>
      <th class="col-sm-1">Bezeichnung</th>
      <th class="col-sm-1">Mengeneingabe</th>
      <th class="col-sm-5">Beschreibung</th>
    </tr>
  </thead>

  <tbody>
    <% @work_steps.each do |work_step| %>
      <tr>
        <td>
          <%= link_to ('<span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>').html_safe, work_step %>
          <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, edit_work_step_path(work_step) %>
          <%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>').html_safe, work_step,
                      method: :delete, data: { confirm: t('askForConfirmation') } %>
        </td>
        <td><%= work_step.DisplayName %></td>
        <td><%= work_step.AllowQuantityInput %></td>
        <td><%= work_step.Description %></td>
      </tr>
    <% end %>
  </tbody>
</table>