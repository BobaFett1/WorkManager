<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-singin"}) do |f| %>
      <h2 class="form-signin-heading">Forgot your password?</h2>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :email, class: 'sr-only' %><br/>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <br/>
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
  <% end %>
</div>