<h1>Kunden</h1>

<%= render "shared/editableListToolbar" %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th class="col-sm-1"></th>
      <th class="col-sm-2">Kundennummer</th>
      <th class="col-sm-2">Name1</th>
      <th class="col-sm-2">Name2</th>
      <th class="col-sm-2">Stra√üe</th>
      <th class="col-sm-2">Hausnummer</th>
      <th class="col-sm-2">PLZ</th>
      <th class="col-sm-2">Stadt</th>
      <th class="col-sm-2">Land</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to ('<span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>').html_safe, customer %>
          <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, edit_customer_path(customer) %>
          <%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>').html_safe, customer, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= customer.Number %></td>
        <td><%= customer.Name1 %></td>
        <td><%= customer.Name2 %></td>
        <td><%= customer.Street %></td>
        <td><%= customer.HoNumber %></td>
        <td><%= customer.ZipCode %></td>
        <td><%= customer.City %></td>
        <td><%= customer.Country %></td>
      </tr>
    <% end %>
  </tbody>
</table>
